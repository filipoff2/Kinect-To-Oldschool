<UserControl
    x:Class="LightBuzz.Vitruvius.Controls.KinectViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignWidth="1920" d:DesignHeight="1080"
AllowDrop="True"
    SizeChanged="UserControl_SizeChanged"
    >

    <Grid AllowDrop="True">
        <Image  AllowDrop="True" Name="camera" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Canvas AllowDrop="True" Name="canvas" HorizontalAlignment="Center" VerticalAlignment="Center"  />
        <Canvas AllowDrop="True" Name="canvas2" HorizontalAlignment="Center" VerticalAlignment="Center"  />
    </Grid>

</UserControl>
